<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.cp.cpspringboot.teacherFollow.mapper.TeacherFollowMapper">
	<sql id="Base_Column_List">
		id,touserid,fromuserid
	</sql>
	<!-- 根据条件查询 -->
	<select id="findTeacherFollow" parameterType="hashmap"
		resultType="TeacherFollow">
		select
		<include refid="Base_Column_List" />
		from zls_item_teacher_Follow
		<where>
			<if test="id!=null and id!=''">
				and id=#{id,jdbcType=INTEGER}
			</if>
			<if test="touserid !=null and touserid !=''">
				and touserid=#{touserid,jdbcType=INTEGER}
			</if>
		</where>
		<choose>
			<when test="order!=null and order!=''">
				order by ${order}
			</when>
			<otherwise>
				order by id
			</otherwise>
		</choose>
	</select>
</mapper>